<div id="sidebar">
    <div class="goblock sb-likeshare">
        <div class="goblock-content">
            <span class="block"><%- page.l.share %></span>
            <div class="sbl-btn">
                <a href="javascript:void(0)" onclick="share('<%- page.url %>','vk')" class="btn btn-radius sbl-vk"><i
                            class="fa fa-vk mr10"></i><%- page.l.vk %></a>
                <a href="javascript:void(0)" onclick="share('<%- page.url %>','facebook')"
                   class="btn btn-radius sbl-fb mr5"><i class="fa fa-facebook mr10"></i><%- page.l.facebook %></a>
                <a href="javascript:void(0)" onclick="share('<%- page.url %>','twitter')" class="btn btn-radius sbl-tw"><i
                            class="fa fa-twitter mr10"></i><%- page.l.twitter %></a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <% if (typeof index === 'object') {
            for (var type in index) {
    if (index.hasOwnProperty(type) && index[type].length && type === 'episode') {
    index[type].forEach(function (category) { %>

        <div class="goblock sb-watched">
            <div class="goblock-header">
                <div class="gh-title"><%- category.name %></div>
                <div class="clearfix"></div>
            </div>
            <div class="goblock-content sbw-content">
                <ul class="ulclear list-item sb-list-item watched-list" style="overflow: hidden;">
                    <% var moreEpisodes = false; %>
                    <% if (typeof category === 'object' && category.movies && category.movies.length) {
                    category.movies.forEach(function (movie) { %>
                        <li <% if (movie.hide) { moreEpisodes = true; %>style="display:none" data-more-episodes="hide"
                                <% } %>
                        >
                            <div class="block sbw-show">
                                <a href="<%- movie.url %>" title="<%= movie.title %>" class="thumb">
                                    <img src="<%- movie.poster_min %>" title="<%= movie.title %>"
                                         alt="<%= movie.title %>">
                                </a>
                                <div class="item-detail">
                                    <h2 class="item-title"><a href="<%- movie.url %>"
                                                              title="<%= movie.title %>"><%- movie.title %></a></h2>
                                    <div class="item-oinfo">
                                        <% if (movie.season && movie.episode) { %><%- movie.season %> <%- page.l.season %> <%- movie.episode %> <%- page.l.episode %>
                                        <% } %>
                                        <span class="dot"></span>
                                        <% if (movie.translate) { %><%- movie.translate %>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </li>
                    <% }); } %>
                </ul>
                <% if (moreEpisodes) { %>
                    <div class="moreEpisodes"
                         onclick="var dme = document.querySelectorAll('[data-more-episodes]'); dme && dme.forEach(function(e) {e.style.display='block'});this.style.display='none'"><%- page.l.moreEpisodes %></div>
                <% } %>
                <div class="clearfix"></div>
            </div>
        </div>

    <% }); } } } %>

    <% if (typeof top === 'object' && top.length) { %>
        <div class="goblock sb-requested">
            <div class="goblock-content go-full">
                <ul class="ulclear list-item sb-list-item sb-list-request">
                    <% top.forEach(function (movie) { %>
                        <li>
                            <a href="<%- movie.url %>" title="<%= movie.title %>" class="thumb"><img
                                        src="<%- movie.poster_min %>" data-cinemapress-src="<%- movie.poster %>" title="<%= movie.title %>"
                                        alt="<%= movie.title %>"></a>
                            <div class="item-detail">
                                <h2 class="item-title"><a href="<%- movie.url %>"
                                                          title="<%= movie.title %>"><%- movie.title %></a></h2>
                                <div class="item-oinfo"><%- movie.genre %> <span class="dot"></span> <%- movie.year %>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    <% }); %>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
    <% } %>

    <% if (typeof soon === 'object' && soon.length) { %>
        <div class="goblock sb-watched">
            <div class="goblock-header">
                <div class="gh-title"><%- page.l.soon %></div>
                <div class="clearfix"></div>
            </div>
            <div class="goblock-content sbw-content">
                <ul class="ulclear list-item sb-list-item watched-list" style="overflow: hidden;">
                    <% soon.forEach(function (movie) { %>
                        <li>
                            <div class="block sbw-show">
                                <a href="<%- movie.url %>" title="<%= movie.title %>" class="thumb">
                                    <img src="<%- movie.poster_min %>" title="<%= movie.title %>"
                                         alt="<%= movie.title %>">
                                </a>
                                <div class="item-detail">
                                    <h2 class="item-title"><a href="<%- movie.url %>"
                                                              title="<%= movie.title %>"><%- movie.title %></a></h2>
                                    <div class="item-oinfo"><%- movie.premiere %> <span
                                                class="dot"></span> <%- movie.genre %></div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </li>
                    <% }); %>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
    <% } %>

    <% if (typeof news === 'object' && news.length) { %>
        <% news.forEach(function (content) { %>
            <div>
                <a href="<%- content.url %>" class="cinemapress-news"
                   style="background-image:url('<%- content.image %>');">
                    <div class="cinemapress-news-title">
                        <%= content.title %>
                    </div>
                </a>
            </div>
        <% }); %>
    <% } %>

    <% if (typeof page.adv === 'object' && page.adv.right) { %>
        <div style="text-align: center; margin: 0 auto">
            <%- page.adv.right %>
        </div>
    <% } %>

    <% if (typeof recent === 'object' && recent.length) { %>
        <% recent.forEach(function (comment) { %>
            <div>
                <div class="cinemapress-comment">
                    <div class="cinemapress-comment-head">
                        <div class="cinemapress-comment-head-avatar">
                            <img src="<%- comment.avatar %>" alt="<%= comment.user %>">
                        </div>
                        <div class="cinemapress-comment-head-meta">
                            <div class="cinemapress-comment-head-meta-title">
                                <a href="<%- comment.url %>" title="<%= comment.title %>"><%= comment.title %></a>
                            </div>
                            <div class="cinemapress-comment-user" data-comment-id="<%- comment.id %>">
                                <div class="cinemapress-comment-user-name">
                                    <%- comment.user %>
                                </div>
                                <div class="cinemapress-comment-user-said">
                                    <%- page.l.said %>
                                </div>
                                <div class="cinemapress-comment-user-date">
                                    <%- comment.date %>
                                </div>
                                <div class="cinemapress-comment-user-link">
                                    <a href="<%- comment.url %>#c<%- comment.id %>" title="<%= comment.title %>">#</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cinemapress-comment-bg cinemapress-comment-radius">
                        <%- comment.comment %>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>

</div>
<div class="clearfix"></div>